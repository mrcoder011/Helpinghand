<%- include("./layouts/boilerplate", { body: `

<section class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center text-primary fw-bold mb-4">Apply Now</h2>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <form action="/contact" method="POST" enctype="multipart/form-data" class="bg-white p-4 rounded shadow-sm">

          <!-- Name -->
          <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" name="name" placeholder="Your full name" required>
          </div>

          <!-- Email -->
          <div class="mb-3">
            <label class="form-label">Email address</label>
            <input type="email" class="form-control" name="email" placeholder="you@example.com" required>
          </div>

          <!-- Role -->
          <div class="mb-3">
            <label class="form-label">Applying for</label>
            <select class="form-select" name="role" required>
              <option selected disabled>Select a role</option>
              <option value="Job">Job</option>
              <option value="Internship">Internship</option>
            </select>
          </div>

          <!-- Resume Upload -->
          <div class="mb-3">
            <label class="form-label">Upload Resume / CV (PDF, DOCX)</label>
            <input type="file" class="form-control" name="resume" accept=".pdf, .doc, .docx" required>
          </div>

          <!-- Message -->
          <div class="mb-3">
            <label class="form-label">Message / Cover Letter</label>
            <textarea class="form-control" name="message" rows="5" placeholder="Write your message here..." required></textarea>
          </div>

          <!-- Do not change this button -->
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>

` }) %>
